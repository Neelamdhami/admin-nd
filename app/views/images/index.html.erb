<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Products list</h2>
        <ol class="breadcrumb">
            <li>
                <a href="">Home</a>
            </li>
            <li>
                <a>E-commerce</a>
            </li>
            <li class="active">
                <strong>Products list</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">

                <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                    <thead>
                    <tr>

                        <th data-toggle="true">image_preview</th>
                        <th data-hide="phone">image_url</th>
                        <th data-hide="all">sort_order</th>
                        

                    </tr>
                    </thead>
                        <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image_tag(image.image_preview, :size => "260x180") %></td>
        <td><%= image.image_url %></td>
        <td><%= image.sort_order %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image_destroy_path(image),  data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div><%#= link_to 'New Image', new_image_path %></div>
<td><%= link_to 'New Product', new_product_path %></td>
</div>
          </div>
    </div>
</div>
<% content_for :javascript do %>
<script type="text/javascript">
$(function() {
   $('.footable').footable();
});
</script>
<% end %>

