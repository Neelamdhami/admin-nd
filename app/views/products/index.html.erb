<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Products list</h2>
        <ol class="breadcrumb">
            <li>
                <a href="">Home</a>
            </li>
            <li>
                <a>E-commerce</a>
            </li>
            <li class="active">
                <strong>Products list</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">

                <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                    <thead>
                    <tr>

                        <th data-toggle="true">Product Name</th>
                        <th data-hide="phone">price</th>
                        <th data-hide="all">Description</th>
                        <th data-hide="phone">meta_tag_title</th>
                        <th data-hide="phone,tablet" >meta_tag_description</th>
                        <th data-hide="phone">meta_tag_keywords</th>
                        <th class="text-right" data-sort-ignore="true">Action</th>

                    </tr>
                    </thead>
                      <tbody>
                    <% @products.each do |product| %>
                      <tr>
                        <td><%= product.name %></td>
                        <td><%= product.price %></td>
                        <td><%= product.description %></td>
                        <td><%= product.meta_tag_title %></td>
                        <td><%= product.meta_tag_description %></td>
                        <td><%= product.meta_tag_keywords %></td>
                        <td><%= link_to 'Show', product %></td>
                        <td><%= link_to 'Edit', edit_product_path(product) %></td>
                        <td><%= link_to 'Destroy', ab_destroy_path(product) , data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                  
                  <td><%= link_to 'New Product', new_product_path %></td>


              </div>
          </div>
    </div>
</div>
<% content_for :javascript do %>
<script type="text/javascript">
$(function() {
   $('.footable').footable();
});
</script>
<% end %>
