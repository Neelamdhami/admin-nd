<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Products list</h2>
        <ol class="breadcrumb">
            <li>
                <a href="">Home</a>
            </li>
            <li>
                <a>E-commerce</a>
            </li>
            <li class="active">
                <strong>Products list</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">

                <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                    <thead>
                    <tr>

                        <th data-toggle="true">product_model</th>
                        <th data-hide="phone">location</th>
                        <th data-hide="all">Tax</th>
                        <th data-hide="phone">product_class</th>
                        <th data-hide="phone,tablet" >quantity</th>
                        <th data-hide="phone">minimum_quantity</th>
                        <th data-hide="phone">sort_order</th>
                        <th data-hide="phone">status</th>
                        <th class="text-right" data-sort-ignore="true">Action</th>

                    </tr>
                    </thead>
                        <tbody>
                    <% @data.each do |datum| %>
                      <tr>
                        <td><%= datum.product_model %></td>
                        <td><%= datum.location %></td>
                        <td><%= datum.Tax %></td>
                        <td><%= datum.product_class %></td>
                        <td><%= datum.quantity %></td>
                        <td><%= datum.minimum_quantity %></td>
                        <td><%= datum.sort_order %></td>
                        <td><%= datum.status %></td>
                        <td><%= link_to 'Show', datum %></td>
                        <td><%= link_to 'Edit', edit_datum_path(datum) %></td>
                        <td><%= link_to 'Delete', aa_destroy_path(datum),
                         data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <td><%#= link_to 'New Datum', new_datum_path %></td>
                <td><%= link_to 'New Product', new_product_path %></td>
              </div>
          </div>
    </div>
</div>
<% content_for :javascript do %>
<script type="text/javascript">
$(function() {
   $('.footable').footable();
});
</script>
<% end %>

